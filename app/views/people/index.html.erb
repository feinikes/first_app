<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>姓名</th>
      <th>年龄</th>
      <th>Email</th>
      <th>公司</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.age %></td>
        <td><%= person.email %></td>
        <td><%= person.company %></td>
        <td><%= link_to '详情', person %></td>
        <td><%= link_to '编辑', edit_person_path(person) %></td>
        <td><%= link_to '删除', person, method: :delete, data: { confirm: '你确定要删除吗？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

